
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineAptitudeTest6.Models.Role

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Edit Role</h6>
                    </div>
                </div>
<div class="container">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="RoleName">Role Name:</label>
                            <input type="hidden" class="form-control" asp-for="RoleId" />
                            <input type="text" class="form-control input-group input-group-outline"  asp-for="Rolename" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
