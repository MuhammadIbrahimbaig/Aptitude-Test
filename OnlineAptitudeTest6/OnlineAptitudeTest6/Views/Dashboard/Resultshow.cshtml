
@{
    ViewData["Title"] = "Resultshow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Result table</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ResultId</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">UserId</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Score</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Result Status</th>


                                

                                </tr>
                            </thead>
                            @if (Model == null)
                            {
                                <p>No user Available.</p>
                            }
                            else
                            {
                                <tbody>
                                    @foreach (var a in Model)
                                    {
                                        <tr>
                                            <td>@a.ResultId</td>
                                            <td>@a.UserId</td>
                                            <td>@a.Score</td>
                                            <td>@a.ResultStatus</td>

                                           @*  <td><a asp-action="userdelete" asp-route-id="@a.UserId" class="btn waves-effect waves-light btn-danger hidden-md-down">Delete</a></td> *@
                                        </tr>
                                    }

                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
