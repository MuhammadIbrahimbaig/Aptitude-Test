
@{
    ViewData["Title"] = "Testshow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Role table</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">TestId</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">TestName</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total Question</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">TotalMarks</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">EducationDetails</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Delete</th>




                                </tr>
                            </thead>
                            @if (Model == null)
                            {
                                <p>No user Available.</p>
                            }
                            else
                            {
                                <tbody>
                                    @foreach (var a in Model)
                                    {
                                        <tr>
                                            <td>@a.TestId</td>
                                            <td>@a.TestName</td>
                                            <td>@a.TotalQuestions</td>
                                            <td>@a.TotalMarks</td>
                                            <td>@a.TimeLimit</td>
                                            <td><a asp-action="Edit" asp-route-id="@a.TestId" class="btn waves-effect waves-light btn-info hidden-md-down">Edit</a></td>

                                            <td><a asp-action="userdelete" asp-route-id="@a.TestId" class="btn waves-effect waves-light btn-danger hidden-md-down">Delete</a></td>
                                        </tr>
                                    }

                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
