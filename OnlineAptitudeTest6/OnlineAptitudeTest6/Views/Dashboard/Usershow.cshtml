@{
    ViewData["Title"] = "Usershow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Role table</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Username</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Password</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">RoleId</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">PersonalDetails</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">EducationDetails</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">WorkExperince</th>

                                    
                                    <th class="text-secondary opacity-7">Delete</th>

                                </tr>
                            </thead>
                            @if (Model == null)
                            {
                                <p>No user Available.</p>
                            }
                            else
                            {
                                <tbody>
                                    @foreach (var a in Model)
                                    {
                                        <tr>
                                            <td>@a.Username</td>
                                            <td>@a.Password</td>
                                            <td>@a.RoleIdFk</td>
                                            <td>@a.PersonalDetails</td>
                                            <td>@a.EducationDetails</td>
                                            <td>@a.WorkExperience</td>

                                            <td><a asp-action="userdelete" asp-route-id="@a.UserId" class="btn waves-effect waves-light btn-danger hidden-md-down">Delete</a></td>
                                        </tr>
                                    }

                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
