@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    <style >
    .form-control {
        border: 1px solid #000; /* Set the border color to black */
        border-radius: 4px; /* Optional: adds rounded corners */
        box-shadow: none; /* Remove any box shadow */
    }

    .form-control:focus {
        border-color: #007bff; /* Change border color on focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Optional: add shadow on focus */
    }
</style>

    @model OnlineAptitudeTest6.Models.Question







<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Edit Role</h6>
                    </div>
                </div>
                <div class="container">
                    <form asp-action="Edit" method="post">


                        <input type="hidden" class="form-control" asp-for="QuestionId" />
                        <div class="form-group mt-2">
                            <div class="input-group input-group-outline mb-3">

                                <select class="form-control" asp-for="TestId">
                                        @foreach (var tem in ViewBag.testt)
                                        {
                                        <option value="@tem.TestId">@tem.TestName</option>
                                        }
                                </select>
                            </div>
                            <div class="input-group input-group-outline mb-3">

                                <input type="text" class="form-control " asp-for="QuestionText" />
                            </div>
                            <div class="input-group input-group-outline mb-3">

                                <input type="text" class="form-control" asp-for="OptionA" />
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" class="form-control" asp-for="OptionB" />
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" class="form-control" asp-for="OptionC" />
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" class="form-control" asp-for="OptionD" />
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" class="form-control" asp-for="CorrectOption" />
                            </div>
                            <div class="input-group input-group-outline mb-3">
                                <input type="text" class="form-control" asp-for="Marks" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
