
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    <style >
    .form-control {
        border: 1px solid #000; /* Set the border color to black */
        border-radius: 4px; /* Optional: adds rounded corners */
        box-shadow: none; /* Remove any box shadow */
    }

    .form-control:focus {
        border-color: #007bff; /* Change border color on focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Optional: add shadow on focus */
    }

</style>
@model OnlineAptitudeTest6.Models.QuestionAddViewModel
<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100" ">
        <span class="mask bg-gradient-light opacity-6"></span>
        <div class="container my-auto">
            <div class="row">
                <div class="col-lg-12 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg py-1 pe-1">
                                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Edit Question</h4>
                                <div class="row mt-3">
                                </div>
                            </div>
                        </div>
<div class="container">
    <form asp-action="Edit" method="post">
     

                  <input type="hidden" class="form-control" asp-for="Question.QuestionId" />
                  <div class="form-group mt-2">
                                    <div class="input-group input-group-outline mb-3">

                <select class="form-control" asp-for="Question.TestId">
                    @foreach (var tem in Model.Testlist)
                    {
                        <option value="@tem.TestId"> @tem.TestName</option>
                    }
                </select>
                </div>
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control " asp-for="Question.QuestionText"  />
                                    </div>
                                    <div class="input-group input-group-outline mb-3">

                <input type="text" class="form-control" asp-for="OptionA" />
                </div>
                                    <div class="input-group input-group-outline mb-3">
                <input type="text" class="form-control" asp-for="OptionB" />
                </div>
                 <div class="input-group input-group-outline mb-3">
                <input type="text" class="form-control" asp-for="OptionC" />
                </div>
                  <div class="input-group input-group-outline mb-3">
                <input type="text" class="form-control" asp-for="OptionD" />
                </div>
                     <div class="input-group input-group-outline mb-3">
                <input type="text" class="form-control" asp-for="CorrectOption" />
                     </div>
                      <div class="input-group input-group-outline mb-3">
                <input type="text" class="form-control" asp-for="Marks" />
                     </div>
                </div>
                              
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>